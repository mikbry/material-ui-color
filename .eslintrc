{
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:import/errors",
    "prettier",
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "benchmark": "readonly",
    "suite": "readonly"
  },
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest/globals": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "prettier",
    "react",
    "jest",
    "react-hooks"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".jsx"
        ]
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "no-multi-assign": 0,
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "arrowParens": "avoid",
        "singleQuote": true,
        "printWidth": 120
      }
    ],
    "no-restricted-syntax": [
      0,
      "ForOfStatement"
    ],
    "max-classes-per-file": 0
  }
}